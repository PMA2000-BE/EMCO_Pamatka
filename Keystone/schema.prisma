datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String     @id @default(cuid())
  name       String     @default("")
  email      String     @unique @default("")
  password   String
  posts      Post[]     @relation("Post_author")
  instrucias Insrucia[] @relation("Insrucia_author")
  createdAt  DateTime?  @default(now())
}

model Post {
  id       String  @id @default(cuid())
  title    String  @default("")
  content  String  @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  author   User?   @relation("Post_author", fields: [authorId], references: [id])
  authorId String? @map("author")
  tags     Tag[]   @relation("Post_tags")

  @@index([authorId])
}

model Insrucia {
  id       String  @id @default(cuid())
  title    String  @default("")
  content  String  @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  images   Image[] @relation("Image_instrucias")
  videos   Video[] @relation("Insrucia_videos")
  author   User?   @relation("Insrucia_author", fields: [authorId], references: [id])
  authorId String? @map("author")
  tags     Tag[]   @relation("Insrucia_tags")

  @@index([authorId])
}

model Image {
  id            String     @id @default(cuid())
  title         String     @default("")
  url_id        String?
  url_filesize  Int?
  url_width     Int?
  url_height    Int?
  url_extension String?
  instrucias    Insrucia[] @relation("Image_instrucias")
}

model Video {
  id           String     @id @default(cuid())
  title        String     @default("")
  url_filesize Int?
  url_filename String?
  instrucias   Insrucia[] @relation("Insrucia_videos")
}

model Tag {
  id         String     @id @default(cuid())
  name       String     @default("")
  posts      Post[]     @relation("Post_tags")
  instrucias Insrucia[] @relation("Insrucia_tags")
}
